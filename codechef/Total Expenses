#include<iostream>
#include<iomanip>
using namespace std;
int main()
{
    int T;cin>>T;
    for(int i=0;i<T;i++)
    {
        double quantity,price;
        cin>>quantity>>price;
        cout<<fixed;
        cout<<setprecision(6);
        if(quantity>1000)
            {cout<<(quantity*price)-(0.1*(quantity*price));}
        else
            cout<<quantity*price;
    }
    return 0;
}

